<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100 p-t-85 p-b-20">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "login100-form validate-form") do |f| %>
        <%= devise_error_messages! %>
				<span class="login100-form-title p-b-70">
					Sign up
				</span>
				<span class="login100-form-avatar">
					<%= image_tag("avatar-01.jpg", alt: "AVATAR") %>
				</span>

				<div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate = "Enter username">
					<%= f.email_field :email, autocomplete: "email", class: "input100" %>
					<span class="focus-input100" data-placeholder="Username"></span>
				</div>

				<div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
					<%= f.password_field :password, autocomplete: "new-password", class: "input100" %>
					<span class="focus-input100" data-placeholder="Password"></span>
          <% if @minimum_password_length %>
            <em>
              (<%= @minimum_password_length %> characters minimum)
            </em>
          <% end %>
				</div>

        <div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input100" %>
          <span class="focus-input100" data-placeholder="Password confirmation"></span>
          <br />
        </div>

				<div class="container-login100-form-btn">
					<%= f.submit "Submit", class: "login100-form-btn" %>
				</div>

				<%= render "devise/shared/links" %>
			<% end %>
		</div>
	</div>
</div>
